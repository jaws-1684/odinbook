<!-- SEARCH FORM -->  
    <div class="search-input shrink-0 relative" data-controller="search">
      <div class="search">
        <%= form_with url: "/search/", method: :get do |form| %>
          <%= form.text_field :query, placeholder: "search", class: "rounded-xl p-2 bg-[#F2F2F2] w-sm text-xs border border-gray-400/50 focus:ring-2 focus:ring-blue-500" %>
          <%= form.submit "search", class: "cursor-pointer", data: { turbo_frame: "search" } %>
        <% end -%>
      </div>
       
      <div class="search-results">
        <%= turbo_frame_tag "search" %>
      </div>  
    </div>