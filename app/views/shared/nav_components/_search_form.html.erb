<!-- SEARCH FORM -->  
    <div class="search-input shrink-0 mt-5" data-controller="search">
      <div class="search">
        <%= form_with url: "/search/", method: :get do |form| %>
          <%= form.text_field :query, placeholder: "enter something", class: "rounded-xl p-2 pl-8 bg-[#F2F2F2] w-sm text-xs border border-gray-400/50 focus:ring-2 focus:ring-blue-500" %>
          <%= form.submit "search", class: "cursor-pointer text-base ml-1 text-gray-600", data: { turbo_frame: "search" } %>
        <% end -%>
      </div>
     <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-5 h-5 relative bottom-7 left-2 z-1000 fill-gray-600/80 pr-1 border-r-1" ><title>magnify</title><path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z" /></svg>  
      <div class="search-results fixed">
        <%= turbo_frame_tag "search" %>
      </div>  
    </div>


