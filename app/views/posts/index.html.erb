      <% require 'faker' %>
<nav class="b-header w-dvw bg-white text-gray-400 shadow-md z-10 basis">

  <div class="flex justify-center items-start">
     <div class="nav-bar flex justify-between items-center w-6xl">
         <div class="site-logo text-2xl font-bold text-blue-500">
          <%= link_to "Odinbook", posts_path %>
          </div>

        <div class="b-profile-info text-black text-sm text-center">
          <div class="b-img inline">
            <%= image_tag current_user.avatar_url, class: "inline mr-2 [clip-path:circle(40%)] w-[50px h-[50px] border-1 border-gray-400/50 "%>
          </div><span class="font-semibold mr-1"><%= current_user.email %> </span>
         
         <%= link_to "Sign out", destroy_user_session_path, data: {
                      turbo_method: :delete,
                      turbo_confirm: "Are you sure?"
                    }, class: "font-semibold text-blue-700" %>
        </div>
   
     </div>
   
  </div>
</nav>

<div class="h-auto bg-gray-200 w-full flex justify-center">
  <div class="b-center flex w-6xl">
    <div class="b-left bg-blue-900 w-sm"></div>

    <div class="b-center w-4xl pt-4 pl-2 pr-2 pb-4 flex flex-col gap-4">
      <div class="b-create w-full h-full border-1 border-gray-400/50 bg-white rounded-xl">
            <div class="create-post p-3">
              <span>Create a post</span>
            </div>

        </div>
      <div class="b-posts w-full h-full border-1 border-gray-400/50 bg-white rounded-xl p-4">
  

      <% 10.times do %>
        <div class="post mb-12">
          <img src="https://picsum.photos/50" alt="" class="inline mr-2 [clip-path:circle(40%)]"><span>By <%= Faker::Name.name %></span>
          <h2><%= Faker::Book.title %></h2>
          <p><%= Faker::Lorem.paragraph(sentence_count: 5) %></p>
         
          
        </div>

        <div class="b-actions text-end">
          <span>like</span>
          <span>comments</span>
        </div>
      <% end %>

      </div>
    </div>

    <div class="b-right w-2xl pt-4 pl-4 pb-4 mt-17 flex flex-col gap-2">
      <div class="image">
         <img src="https://picsum.photos/600" alt="" class="object-cover rounded-xl">
      </div>

      <div class="image">
         <img src="https://picsum.photos/600" alt="" class="object-cover rounded-xl">
      </div>

      <div class="image">
         <img src="https://picsum.photos/600" alt="" class="object-cover rounded-xl">
      </div>

      <div class="image">
         <img src="https://picsum.photos/600" alt="" class="object-cover rounded-xl">
      </div>

       
    </div>
  </div>
</div>

