<% content_for :title do %>feed<% end %>

<%= content_for :main do %>

    <%= render "new_post" %>

    <div class="b-posts w-full h-auto border-1 border-gray-400/50 bg-white rounded-xl text-sm overflow-y-auto">
        <%= turbo_stream_from "posts" %>
        <div id="posts-container">
            <%= render @posts.includes(:user).order(created_at: :desc) %>
        </div>
    </div>
<% end -%>

<%= content_for :modal do %>
    <%= turbo_frame_tag "new_post" %>
<% end -%>

<div class="h-auto w-xl bg-blue-400 fixed top-15 left-139 z-20">
    <div class="h-[100px] w-xl block">
        
    </div>
</div>