<%= turbo_frame_tag "post" do %>
	<h2 class="text-center text-xl font-bold mb-2 text-blue-700">New Post</h2>
	
		<%= form_with model: @post do |f| %>

		<div class="b-new-post flex flex-col h-auto w-full pl-2">

			<div class="b-img-url mb-2">
					<%= f.label :image_url, "Image", class: "font-bold text-sm" %>
					<%= f.file_field :image_url, class: "text-xs underline" %>
			</div>
			

			<div class="b-title mb-2 flex flex-row gap-2 justify-start">
		      <%= f.label :title, "Title", class: "font-bold text-sm pr-1" %>
		      <%= f.text_field :title, placeholder: "Enter your title here", class: "border-1 border-gray-400/50 bg-gray-100 p-1 rounded-sm mb-2 basis-105 text-xs" %>
		  </div>

	    <div class="b-body mb-2 flex flex-row gap-2 justify-start">
	      <%= f.label :body, "Body", class: "font-bold text-sm" %>
	      <%= f.text_area :body, placeholder: "Write your post content here...", class: "border-1 border-gray-400/50 bg-gray-100 p-1 rounded-sm mb-2 basis-105 text-xs h-[200px]" %>
	    </div>

	    <div class="actions self-end mr-4">
	      <%= f.submit "Create", class: "font-semibold text-blue-700 cursor-pointer border-1 border-gray-400/50 bg-white p-1 rounded-sm text-sm" %>
	    </div>

		</div>    
	<% end -%>
	
<% end %>