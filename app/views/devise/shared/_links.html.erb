 <div class="container flex flex-col pt-2">
  <%- if controller_name != 'sessions' %>
      <div class="b-login flex">
        <%= link_to "Log in", new_session_path(resource_name), class: "sign-up mb-2 rounded-sm shadow-md text-center text-black outline-1 outline-gray-500/100 p-1 w-78 bg-green-200" %><br />
    </div>
  <% end %>


  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up mb-2 rounded-sm shadow-md text-center text-black outline-1 outline-black-500/100 p-1" %><br />
  <% end %>
  


</div>

 <div class="forgot-password underline">
                <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                  <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-800" %><br />
                <% end %>
          </div>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>
<div class="oauth order-1 flex justify-between mt-2">
