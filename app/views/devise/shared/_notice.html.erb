
<% flash.each do |name, msg| -%>
   <% if name == "alert" %>
     <%= content_tag :div, msg, class: "#{name} p-2 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 w-[300px] h-auto role='alert'" %>
   <% else -%>
      <%= content_tag :div, msg, class: "#{name} p-2 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 role='alert'" %>
   <% end -%>
<% end -%>