
<% flash.each do |name, msg| -%>
   <% if name == "alert" %>
     <%= content_tag :div, msg, class: "p-2 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 role='alert'" %>
   <% else -%>
      <%= content_tag :div, msg, class: name %>
   <% end -%>
<% end -%>
    
   