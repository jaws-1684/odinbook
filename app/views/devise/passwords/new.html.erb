<div class="b-forgot-your-password">
  <h2 class="text-2xl mb-4 pb-4 text-center">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-2 flex flex-col gap-[2px]">
          <%= f.label :email, "Email address"%><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " text-sm border-1 border-gray-200/50 focus:border-blue-500/50 rounded-sm w-96 h-[30px] w-[310px] pl-2 bg-gray-100 mb-4 placeholder:italic", placeholder: "johndoe@email.com" %>
        </div>


    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: "actions bg-blue-400 rounded-sm shadow-md text-center p-1 text-white cursor-pointer w-full" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>