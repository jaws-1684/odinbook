<%= content_for :login do %>
  <div class="b-login flex flex-col justify-center items-center w-full mt-18">
      <div class="b-header">
         <h2 class="text-3xl mb-4 pb-4 text-center text-gray-700 font-semibold">Sign in to <b class="text-blue-400">Odinbook</b></h2>
      </div>

    <div class="bg-[#ffffff] rounded-xl shadow-md flex flex-col justify-around p-4 g-4">   
        <%= render "devise/shared/notice" %>
       <div class="b-credentials flex flex-col">
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mb-2 flex flex-col gap-[2px]">
              <%= f.label :email, "Email address"%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " text-sm border-1 border-gray-200/50 focus:border-blue-500/50 rounded-sm w-full h-[30px] w-[310px] pl-2 bg-gray-100 placeholder:italic", placeholder: "john.doe@example.com" %>
            </div>

            <div class="field mb-2 field mb-4 flex flex-col gap-[2px]">
              <%= f.label :password, class: "" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "text-sm border-1 border-gray-200/50 focus:border-blue-500/50 rounded-sm h-[30px] w-full pl-2 bg-gray-100 placeholder:italic", placeholder: "********" %>
            </div>

            <div class="b-remememberable-forgot flex justify-between text-sm mb-2 text-gray-800">
              <% if devise_mapping.rememberable? %>
              <div class="field mb-2">
                <%= f.check_box :remember_me, class: "accent-blue-500" %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

              <div class="forgot-password underline">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-800" %><br />
                    <% end %>
              </div>
            </div>
            

        
              <%= f.submit "Sign in", class: "actions bg-blue-400 rounded-sm shadow-md text-center p-1 text-white cursor-pointer w-full" %>
         
          <% end %>

          <div class="relative order-1 mt-4">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <p class="bg-white dark:bg-gray-800 px-2 text-gray-500 dark:text-gray-400">Or continue with</p>
            </div>
          </div>
           <%= render "devise/shared/oauth" %>
       </div>      
    </div>

  <div class="b-create-account text-base ml-4 pt-2">
     <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
     <p>New to OdinBook?&nbsp<%= link_to "Create an account", new_registration_path(resource_name), class: "text-blue-800 underline" %></p>
    <% end %>         
  </div>
  
  <div class="container fixed top-22 left-20 bg-white w-80 min-h-42 rounded-xl p-2 text-gray-900" data-controller="clipboard">
   <h2 class="text-2xl text-blue-400 font-semibold">Dummy accounts</h2>
   <p id="copy-result"></p>
   <h3 class="text-xl mt-2">John Doe (no friends and posts)</h3>
   <div class="flex justify-between gap-2">
       <p>Login:</p>
       <div class="rounded-sm bg-gray-200 pl-1 mb-1 grow-1 text-blue-600 border-1 border-gray-300 flex">
         <p id="value">john.doe@example.com</p>
       </div>
       <button class="text-gray-700 hover:text-gray-500 cursor-pointer" data-action="click->clipboard#copy"><svg xmlns="http://www.w3.org/2000/svg" class="pointer-events-none" width="20" height="20" viewBox="0 0 408 480"><path fill="currentColor" d="M299 5v43H43v299H0V48q0-18 12.5-30.5T43 5h256zm64 86q17 0 29.5 12.5T405 133v299q0 18-12.5 30.5T363 475H128q-18 0-30.5-12.5T85 432V133q0-17 12.5-29.5T128 91h235zm0 341V133H128v299h235z"/></svg></button>
   </div>
 
  <div class="flex justify-between gap-2">
       <p>Password:</p>
       <div class="rounded-sm bg-gray-200 grow-1 pl-1 pr-1 text-green-600 border-1 border-gray-300 flex justify-between">
           <p id="value">password</p>
          
       </div>
              <button class="text-gray-700 hover:text-gray-500 cursor-pointer" data-action="click->clipboard#copy"><svg xmlns="http://www.w3.org/2000/svg" class="pointer-events-none" width="20" height="20" viewBox="0 0 408 480"><path fill="currentColor" d="M299 5v43H43v299H0V48q0-18 12.5-30.5T43 5h256zm64 86q17 0 29.5 12.5T405 133v299q0 18-12.5 30.5T363 475H128q-18 0-30.5-12.5T85 432V133q0-17 12.5-29.5T128 91h235zm0 341V133H128v299h235z"/></svg></button>
   </div>

   <h3 class="text-xl mt-2">Alice Johnson (friends and posts)</h3>
   <div class="flex justify-between gap-2">
       <p>Login:</p>
       <div class="rounded-sm bg-gray-200 pl-1 mb-1 grow-1 text-blue-600 border-1 border-gray-300 flex">
         <p id="value">alice.johnson@example.com</p>
       </div>
       <button class="text-gray-700 hover:text-gray-500 cursor-pointer" data-action="click->clipboard#copy"><svg xmlns="http://www.w3.org/2000/svg" class="pointer-events-none" width="20" height="20" viewBox="0 0 408 480"><path fill="currentColor" d="M299 5v43H43v299H0V48q0-18 12.5-30.5T43 5h256zm64 86q17 0 29.5 12.5T405 133v299q0 18-12.5 30.5T363 475H128q-18 0-30.5-12.5T85 432V133q0-17 12.5-29.5T128 91h235zm0 341V133H128v299h235z"/></svg></button>
   </div>
 
  <div class="flex justify-between gap-2">
       <p>Password:</p>
       <div class="rounded-sm bg-gray-200 grow-1 pl-1 pr-1 text-green-600 border-1 border-gray-300 flex justify-between">
           <p id="value">password</p>
          
       </div>
              <button class="text-gray-700 hover:text-gray-500 cursor-pointer" data-action="click->clipboard#copy"><svg xmlns="http://www.w3.org/2000/svg" class="pointer-events-none" width="20" height="20" viewBox="0 0 408 480"><path fill="currentColor" d="M299 5v43H43v299H0V48q0-18 12.5-30.5T43 5h256zm64 86q17 0 29.5 12.5T405 133v299q0 18-12.5 30.5T363 475H128q-18 0-30.5-12.5T85 432V133q0-17 12.5-29.5T128 91h235zm0 341V133H128v299h235z"/></svg></button>
   </div>
  

   <p class="mt-2 text-sm">Also you can log in to any dummy account you see on site following the same pattern or getting the users email from the dummys profile page</p>
  </div>
<% end -%>