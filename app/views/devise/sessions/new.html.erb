<%= content_for :login do %>
  <div class="b-login flex flex-col justify-center items-center w-full mt-18">
      <div class="b-header">
         <h2 class="text-3xl mb-4 pb-4 text-center text-gray-700 font-semibold">Sign in to <b class="text-blue-400">Odinbook</b></h2>
      </div>

    <div class="bg-[#ffffff] rounded-xl shadow-md flex flex-col justify-around p-4 g-4">   
        <%= render "devise/shared/notice" %>
       <div class="b-credentials flex flex-col">
         <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field mb-2 flex flex-col gap-[2px]">
              <%= f.label :email, "Email address"%>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: " text-sm border-1 border-gray-200/50 focus:border-blue-500/50 rounded-sm w-full h-[30px] w-[310px] pl-2 bg-gray-100 placeholder:italic", placeholder: "johndoe@email.com" %>
            </div>

            <div class="field mb-2 field mb-4 flex flex-col gap-[2px]">
              <%= f.label :password, class: "" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "text-sm border-1 border-gray-200/50 focus:border-blue-500/50 rounded-sm h-[30px] w-full pl-2 bg-gray-100 placeholder:italic", placeholder: "********" %>
            </div>

            <div class="b-remememberable-forgot flex justify-between text-sm mb-2 text-gray-800">
              <% if devise_mapping.rememberable? %>
              <div class="field mb-2">
                <%= f.check_box :remember_me, class: "accent-blue-500" %>
                <%= f.label :remember_me %>
              </div>
            <% end %>

              <div class="forgot-password underline">
                    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
                      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-blue-800" %><br />
                    <% end %>
              </div>
            </div>
            

        
              <%= f.submit "Sign in", class: "actions bg-blue-400 rounded-sm shadow-md text-center p-1 text-white cursor-pointer w-full" %>
         
          <% end %>

          <div class="relative order-1 mt-4">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <p class="bg-white dark:bg-gray-800 px-2 text-gray-500 dark:text-gray-400">Or continue with</p>
            </div>
          </div>
           <%= render "devise/shared/oauth" %>
       </div>      
    </div>

  <div class="b-create-account text-base ml-4 pt-2">
     <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
     <p>New to OdinBook?&nbsp<%= link_to "Create an account", new_registration_path(resource_name), class: "text-blue-800 underline" %></p>
    <% end %>         
  </div>
  
<% end -%>